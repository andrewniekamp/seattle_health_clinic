@{Layout = "Views/Shared/_Layout.cshtml";}
<link rel="stylesheet" href="/Content/css/patients.css" media="screen" title="no title" charset="utf-8">

<div class="container">
  <div class="row">

    <div class="col-md-12">
      <!-- cosmetic feature shows the current page route -->
      <ul class="breadcrumb">
        <li>Patients > <span class="highlight-text">Current Patients</span></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <!-- linked list used to navigate to parts of the page -->
      <div class="list-group">
        <a class="list-group-item active">All Patients</a>
      </div>
    </div>
    <!-- main body for display of material -->
    <div class="col-md-9">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">All Patients</h3>
        </div>
        <div class="panel-body">
          <div class="row patient-header-row">
            <div class="col-xs-4">
              <h4>Patient ID</h4>
            </div>
            <div class="col-xs-4">
              <h4>Name</h4>
            </div>
            <div class="col-xs-4">
              <h4>Address</h4>
            </div>
          </div>
          <div class="all-patient-row">
            @foreach(var allPatient in Model["patients"])
            {
              <div class="row">
                <div class="col-xs-4">
                  <h5>@allPatient.GetId()</h5>
                </div>
                <div class="col-xs-4">
                  <h5>@allPatient.GetName()</h5>
                </div>
                <div class="col-xs-4">
                  <h5>@allPatient.GetAddress()</h5>
                </div>
              </div>
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="http://code.jquery.com/jquery-2.2.4.min.js"></script>

<script src="/Content/js/allPatients.js" type="text/javascript"></script>

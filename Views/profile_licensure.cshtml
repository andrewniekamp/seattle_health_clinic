@{Layout = "Views/Shared/_Layout.cshtml";}

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- cosmetic feature shows the current page route -->
      <ul class="breadcrumb">
        <li>Profile > <span class="highlight-text">Licensing</span></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <!-- linked list used to navigate to parts of the page -->
      <div class="list-group">
        <a class="list-group-item active">Employment</a>
        <a class="list-group-item">Licensing</a>
        <a class="list-group-item">Boards</a>
        <!-- <a class="list-group-item"></a> -->
      </div>
    </div>
    <!-- main body for display of material -->
    <div class="col-md-7 col-md-offset-1">
      <!-- main panel should have panel-primary -->
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Employment</h3>
        </div>
        <div class="panel-body">
          <p><strong>First Name:</strong> @Model["currentEmployee"].GetFirstName()</p>
          <p><strong>Last Name:</strong> @Model["currentEmployee"].GetLastName()</p>
        </div>
      </div>
      <!-- every panel after the hide should have the panel-hide class the panel-body -->
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Licensing</h3>
        </div>
        <div class="panel-body panel-hide">
          <p>
            <strong>Current Licenses: </strong>
            @if(@Model["currentLicenses"].Count != 0)
            {
              @foreach(var license in Model["currentLicenses"])
              {
                <p>@license.GetLicenseType() </p>
              }
            }
            else
            {
              <span>none</span>
            }
          </p>
        </div>
      </div>
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Boards</h3>
        </div>
        <div class="panel-body panel-hide">
          <p>
          <strong>Current Board Certifications: </strong>
          @if(@Model["currentLicenses"].Count != 0)
          {
            @foreach(var license in Model["currentLicenses"])
            {
              <p>@license.GetLicenseNumber()</p>
            }
          }
          else
          {
            <p>Really? Nothing?</p>
          }
        </p>
        </div>
      </div>
      <!-- <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title"></h3>
        </div>
        <div class="panel-body panel-hide">
          (information)
        </div>
      </div> -->
    </div>
  </div>
</div>

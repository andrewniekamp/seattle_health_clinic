@{Layout = "Views/Shared/_Layout.cshtml";}

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!-- cosmetic feature shows the current page route -->
      <ul class="breadcrumb">
        <li>Personnel > <span class="highlight-text">Current</span></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <!-- linked list used to navigate to parts of the page -->
      <div class="list-group">
        <a class="list-group-item active">Current</a>
        <a class="list-group-item">Display #2</a>
        <a class="list-group-item">Display #3</a>
        <a class="list-group-item">Display #4</a>
      </div>
    </div>
    <!-- main body for display of material -->
    <div class="col-md-7 col-md-offset-1">
      <!-- main panel should have panel-primary -->
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Current</h3>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover text-center">
            @foreach(var employee in @Model["allEmployees"])
            {
              <tr>
                <td>@employee.GetId()</td>
                <td>@employee.GetFullName()</td>
                <td>@employee.GetEmployeeType()</td>
                <td>@employee.GetEmail()</td>
              </tr>
            }
          </table>
        </div>
      </div>
      <!-- every panel after the hide should have the panel-hide class the panel-body -->
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Display #2</h3>
        </div>
        <div class="panel-body panel-hide">
          (information)
        </div>
      </div>
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Display #3</h3>
        </div>
        <div class="panel-body panel-hide">
          (information)
        </div>
      </div>
      <div class="panel">
        <div class="panel-heading">
          <h3 class="panel-title">Display #4</h3>
        </div>
        <div class="panel-body panel-hide">
          (information)
        </div>
      </div>
    </div>
  </div>
</div>

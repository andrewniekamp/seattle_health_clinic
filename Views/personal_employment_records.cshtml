@{Layout = "Views/Shared/_Layout.cshtml";}

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <!-- cosmetic feature: shows the current page route -->
      <ul class="breadcrumb">
        <li>Profile > <span class="highlight-text">Personal</span></li>
      </ul>
    </div>
    <div class="col-md-3">
      <!-- linked list: used to navigate to parts of the page -->
      <div class="list-group">
        <a id="list-one" class="list-group-item active">Personal Information</a>
        <a id="list-two" class="list-group-item">Other Information</a>
      </div>
    </div>
    <!-- main body for display of material -->
    <div class="col-md-7 col-md-offset-1">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Personal Information</h3>
        </div>
        <!-- panel-one should not have all-panels since it should display on page load -->
        <div class="panel-body" id="panel-one">
          <p>
            Blah!
          </p>
        </div>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Other Information</h3>
        </div>
        <div class="panel-body all-panels"  id="panel-two">
          <p>
            Blah!
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
